extends layout

block content
  - const cForm = [];
  - const cRow = [];
  - const cInput = [];

  mixin formInput(labelText, type, inputId)
    .form-group
      label(for=`${inputId}`)= labelText
      input.form-control(id=`${inputId}`)

  if page && page.title
    h2= page.title
    section.section-firstclass.border.rounded
      form
        +formInput('Name', 'text', 'name-input')
        +formInput('Subject', 'text', 'title-input')
        .form-group
          label(for='msg-input') Message
          textArea.form-control(id='msg-input' rows="3")

    section.section-firstclass.border.rounded
      if comments

      else
        p No comments yet.  You can be the first one!
