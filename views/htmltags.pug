extends layout

block content
  h2= page.title
  p= 'This content was generated by scraping content from '
    a(href='https://www.w3schools.com/tags/') https://www.w3schools.com/tags/
    | .
  if tags
    each tag in tags
      section.section-firstclass.border.rounded
        h5
          a(href=`${tag.path}`)
            =tag.tag_name
        !=tag.description
      a.top(href='#') Top
  else
    p There was a problem generating the content.
